{
  "extends": "@tsed/typescript/tsconfig.web.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "noEmit": true,
    "declaration": false,
    "composite": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "vite.config.mts", "tailwind.config.ts"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts", "src/**/*.spec.tsx"]
}
